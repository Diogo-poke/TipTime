<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TipTime.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            

            <Label
                Text="Valor"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Entry 
                  x:Name="ValorTotalEntry"
                  Placeholder="Digite o valor total"/>
            
               <Label
              Text=" Gorjeta" />

            <Label
              x:Name =" ValorGorjeta"
               Text="00.00" />

              <Label
               Text=" Total" />

              <Label      
              x:Name="ValorFinal"
                 Text="00.00"
                     />

            <Label 
                Text="PorcentagemGorjeta"
                />
            <Label
                x:Name="PorcentagemLabel"
                Text="15%"
                />


            <Slider Maximum="100" Minimum="0"
                x:Name="PorcentagemSlider"
                ValueChanged="PorcentagemSlider_ValueChanged" />

            <Button
                x:Name="Porcentagem15Btn"
                Text="15%" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="Porcentagem15Btn_Clicked"
                HorizontalOptions="Fill" />

              <Button
                x:Name="Porcentagem20Btn"
                Text="20%" 
                SemanticProperties.Hint="Counts the number of times you click"
               Clicked="Porcentagem20Btn_Clicked"
               HorizontalOptions="Fill" />

            <Button
                x:Name="RoundD"
                Text="Round Down" 
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="RoundD_Clicked"
                HorizontalOptions="Fill" />

              <Button
              x:Name="RooundU"
              Text="Round up" 
              SemanticProperties.Hint="Counts the number of times you click"
              Clicked="RooundU_Clicked"
              HorizontalOptions="Fill" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
